	local soTien = tonumber(cashBox.Text) or 0
	local args = { false, soTien, "Cash" }
	game:GetService("ReplicatedStorage"):WaitForChild("MoneyRequest", 9e9):FireServer(unpack(args))
end)

-- üìå S·ª± ki·ªán n√∫t t√†u
