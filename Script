	game:GetService("ReplicatedStorage"):WaitForChild("BoatSpawner", 9e9):InvokeServer("Transport Boat")
end)

-- üìå M·ªü/ƒë√≥ng GUI
openBtn.MouseButton1Click:Connect(function()
	frame.Visible = true
	openBtn.Visible = false
end)

closeBtn.MouseButton1Click:Connect(function()
